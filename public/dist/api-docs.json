{
  "swagger": "2.0",
  "info": {
    "description": "This is a sample server Mediscan server.  You can find out more about     Swagger at [http://swagger.io](http://swagger.io) or on [irc.freenode.net, #swagger](http://swagger.io/irc/).      For this sample, you can use the api key `special-key` to test the authorization     filters.",
    "version": "1.0.0",
    "title": "Swagger Mediscan",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "apiteam@swagger.io"
    },
    "license": {
      "name": "Apache 2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
    }
  },
  "host": "mediscan.herokuapp.com",
  "basePath": "/api",
  "tags": [{
      "name": "message",
      "description": "Everything about messages",
      "externalDocs": {
        "description": "Find out more",
        "url": "https://mediscan.herokuapp.com"
      }
    },
    {
      "name": "prescription",
      "description": "Operations about prescriptions",
      "externalDocs": {
        "description": "Find out more about mediscan",
        "url": "https://mediscan.herokuapp.com"
      }
    }
  ],
  "schemes": [
    "http"
  ],
  "paths": {
    "/messages": {
      "get": {
        "tags": [
          "message"
        ],
        "summary": "Return all messages",
        "description": "",
        "operationId": "getAllMessages",
        "produces": "application/json",
        "responses": {
          "200": {
            "description": "An array of messages",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/ApiResponses/Messages"
                }
              }
            }
          }
        },
        "schema": {
          "type": "object",
          "$ref": "#/definitions/Message"
        }
      }
    },
    "/messages/{id}/reply": {
      "get": {
        "tags": [
          "message"
        ],
        "summary": "Update an existing message replied time",
        "description": "",
        "operationId": "updateMessage",
        "parameters": [{
          "in": "path",
          "name": "id",
          "description": "ID of the message to get",
          "type": "string",
          "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Done!"
          },
          "404": {
            "description": "No such message!"
          }
        },
        "security": [{
          "mediscan_auth": [
            "write:message",
            "read:message"
          ]
        }]
      }
    },
    "/prescriptions": {
      "get": {
        "tags": [
          "prescription"
        ],
        "summary": "Return all prescription",
        "description": "",
        "operationId": "getAllPrescritons",
        "produces": "application/json",
        "responses": {
          "200": {
            "description": "An array of prescription"
          }
        }
      }
    },
    "/prescriptions/create": {
      "post": {
        "tags": [
          "prescription"
        ],
        "parameters": [{
          "required": true,
          "in": "body",
          "name": "medicine",
          "schema": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Medication"
            }
          }
        }],
        "summary": "Create a prescription",
        "description": "",
        "operationId": "createPrescritons",
        "produces": "application/json",
        "responses": {
          "200": {
            "description": "redirect user to index page"
          },
          "500": {
            "description": "internal server error"
          }
        }
      }
    },
    "/prescriptions/{id}": {
      "delete": {
        "tags": [
          "prescription"
        ],
        "parameters": [{
          "required": true,
          "in": "path",
          "name": "id",
          "description": "prescription Id",
          "schema": {
            "type": "integer"
          }
        }],
        "summary": "Deletes a prescription",
        "description": "",
        "operationId": "deletePrescriptions",
        "produces": "application/json",
        "responses": {
          "200": {
            "description": "prescription is deleted"
          },
          "500": {
            "description": "internal server error"
          }
        }
      }
    },
    "/prescriptions/{id}/subscribe": {
      "post": {
        "tags": [
          "prescription"
        ],
        "summary": "Generates and sends a random verification code to the specified phone number",
        "description": "",
        "operationId": "subscribeToPrescription",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [{
            "in": "path",
            "name": "id",
            "description": "ID of the prescription to get",
            "type": "string",
            "required": true
          },
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "$ref": "#/components/ApiParameters/Subscribe"
            },
            "description": "Mobile phone number to send verification code"
          }
        ],
        "responses": {
          "200": {
            "description": "Verification code sent to mobile phone"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [{
          "mediscan_auth": [
            "write:message",
            "read:message"
          ]
        }]
      }
    },
    "/prescriptions/{id}/verify": {
      "post": {
        "tags": [
          "prescription"
        ],
        "summary": "Checks the verification code and add to prescription if valid",
        "description": "",
        "operationId": "verifySubscription",
        "consumes": [
          "application/json",
          "application/xml"
        ],
        "produces": [
          "application/xml",
          "application/json"
        ],
        "parameters": [{
          "in": "body",
          "name": "body",
          "required": true,
          "schema": {
            "$ref": "#/components/ApiParameters/Verify"
          },
          "description": "Mobile phone number and verification code for verification"
        }],
        "responses": {
          "200": {
            "description": "Welcome message sent to mobile phone"
          },
          "404": {
            "description": "Phone number cannot be found!"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "security": [{
          "mediscan_auth": [
            "write:message",
            "read:message"
          ]
        }]
      }
    }
  },
  "securityDefinitions": {
    "mediscan_auth": {
      "type": "oauth2",
      "authorizationUrl": "https://mediscan.herokuapp.com/oauth/dialog",
      "flow": "implicit",
      "scopes": {
        "write:message": "modify message",
        "read:message": "read your message"
      }
    },
    "api_key": {
      "type": "apiKey",
      "name": "api_key",
      "in": "header"
    }
  },
  "definitions": {
    "Message": {
      "type": "object",
      "required": "prescriptionId",
      "properties": {
        "prescriptionId": {
          "type": "string"
        },
        "sentTime": {
          "type": "string",
          "format": "date-time"
        },
        "repliedTime": {
          "type": "integer",
          "format": "int32"
        },
        "retriedTime": {
          "type": "string",
          "format": "date-time"
        },
        "alertTime": {
          "type": "string",
          "format": "date-time"
        },
        "medications": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Medication"
          }
        }
      },
      "xml": {
        "name": "Message"
      }
    },
    "Medication": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "quantity": {
          "type": "number",
          "description": "The amount to take per day"
        },
        "units": {
          "type": "string"
        },
        "remarks": {
          "type": "string"
        },
        "frequency": {
          "type": "integer",
          "description": "denotes the amount to take in a day"
        }
      },
      "xml": {
        "name": "Medication"
      }
    },
    "Prescription": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "patientPhoneNumber": {
          "type": "string",
          "description": "8 digit character"
        },
        "caregiverPhoneNumbers": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "medications": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Medication"
          }
        }
      },
      "xml": {
        "name": "Prescription"
      }
    },
    "PhoneNumber": {
      "type": "object",
      "properties": {
        "phoneNumber": {
          "type": "string",
          "example": "12345678",
          "description": "8 digit mobile phone number"
        },
        "verificationCode": {
          "type": "string",
          "description": "4 random generated digits"
        },
        "prescription": {
          "type": "object",
          "schema": {
            "$ref": "#/definitions/Prescription"
          }
        }
      },
      "xml": {
        "name": "PhoneNumber"
      }
    }
  },
  "components": {
    "ApiParameters": {
      "Subscribe": {
        "type": "object",
        "properties": {
          "phoneNumber": {
            "type": "string",
            "example": "12345678",
            "description": "8 digit mobile phone number"
          }
        },
        "xml": {
          "name": "Subscribe"
        }
      },
      "Verify": {
        "type": "object",
        "properties": {
          "phoneNumber": {
            "type": "string",
            "example": "12345678",
            "description": "8 digit mobile phone number"
          },
          "verificationCode": {
            "type": "string",
            "example": "1234",
            "description": "4 random generated digits"
          }
        },
        "xml": {
          "name": "Verify"
        }
      }
    },
    "ApiResponses": {
      "Messages": {
        "type": "object",
        "properties": {
          "messages": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Message"
            }
          }
        },
        "xml": {
          "name": "Messages"
        }
      },
      "Prescriptions": {
        "type": "object",
        "properties": {
          "prescriptions": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Prescription"
            }
          },
          "xml": {
            "name": "Verify"
          }
        }
      }
    },
    "externalDocs": {
      "description": "Find out more about Swagger",
      "url": "http://swagger.io"
    }
  }
}